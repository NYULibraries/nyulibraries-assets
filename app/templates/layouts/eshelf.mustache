<!DOCTYPE html>
<html>
  <head>
    {{meta}}
    <title>{{title}}</title>
    {{institutional_stylesheets}}
    {{javascripts}}
  </head>
  <body>
    {{> bobcat/header}}
    {{> common/nav1}}
    <div class="nyu-container">
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span10 eshelf-header">
            <h1><span>e-Shelf</span></h1>
            <span class="username">for {{username}}</span>
          </div>
          <div class="span2 back-to">{{back_to}}</div>
        </div>
        <div class="row-fluid">
          <div class="span2">
            <div id="sidebar" class="sidebar" data-spy="affix" data-offset-top="200">
              {{> users/shelf}}
            </div>
          </div>
          <div class="span10">
            {{yield}}
          </div>
        </div>
      </div>
    </div>
    {{footer}}
    {{> common/gauges}}
  </body>
</html>