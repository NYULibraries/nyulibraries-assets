<!DOCTYPE html>
<html>
  <head>
    {{meta}}
    <title>{{title}}</title>
    {{stylesheets}}
    {{javascripts}}
  </head>
  <body{{#onload}} onload="{{onload}}"{{/onload}}{{#body_class}} class="{{body_class}}"{{/body_class}}{{#body_id}} id="{{body_id}}"{{/body_id}}>
    {{prepend_body}}
    <header id="header" class="header">
      <div class="parent"><a href="http://library.nyu.edu/"><span>NYU Libraries</span></a></div>
      <div class="suite"><span>{{suite}}</span></div>
      <div class="application"><span>{{application}}</span></div>
    </header>
    <nav id="nav1" class="breadcrumb">
      <ul class="nyu-breadcrumbs">
        {{#breadcrumbs}}
          <li>{{.}}</li>
        {{/breadcrumbs}}
      </ul>
      <ul class="nyu-login">
        <li>{{login}}</li>
      </ul>
    </nav>
    <div class="nyu-container">
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="{{#two_column}}span8{{/two_column}}{{^two_column}}span12{{/two_column}}">
            {{#show_tabs}}
            {{! Use Twitter Bootstrap's responsive collapsible menu }}
            <div class="navbar navbar-tabs">
              <div class="navbar-inner">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </a>
                <h4>{{tabs_header}}</h4>
                <div class="nav-collapse collapse">
                  <ul class="nav nav-tabs">
                    {{#tabs}}
                      <li class="{{klass}}" id="{{code}}">{{link}}</li>
                    {{/tabs}}
                  </ul>
                </div>
              </div>
            </div>
            {{/show_tabs}}
            {{prepend_yield}}
            {{yield}}
          </div>
          {{#two_column}}
          <div class="span4">
            <div id="sidebar" class="sidebar">
              {{sidebar}}
            </div>
          </div>
          {{/two_column}}
        </div>
      </div>
    </div>
    {{footer}}
    {{! If tracking with Gaug.es, insert the tracking script here. }}
    {{#gauges?}}
    <script type="text/javascript">
      var _gauges = _gauges || [];
      (function() {
        var t   = document.createElement('script');
        t.type  = 'text/javascript';
        t.async = true;
        t.id    = 'gauges-tracker';
        t.setAttribute('data-site-id', '{{gauges_tracking_code}}');
        t.src = '//secure.gaug.es/track.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(t, s);
      })();
    </script>
    {{/gauges?}}
  </body>
</html>